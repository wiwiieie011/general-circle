## Multi-stage Dockerfile for notification-service

# --- Build stage ---
FROM golang:alpine AS builder

WORKDIR /src

# Install git (needed for go mod download with some VCS), and CA certs for module fetching
RUN apk add --no-cache git ca-certificates tzdata && update-ca-certificates

# Cache modules
COPY go.mod go.sum ./
RUN go mod download

# Copy the rest of the source
COPY . .

# Build static binary
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /out/notification-service ./cmd/app


# --- Runtime stage ---
FROM alpine:3.20

WORKDIR /app

RUN apk add --no-cache ca-certificates tzdata && update-ca-certificates

# Copy binary from build stage
COPY --from=builder /out/notification-service /app/notification-service

# Copy .env (the app requires this file to exist due to godotenv.Load)
COPY .env /app/.env

# Set minimal env defaults (can be overridden at runtime)
ENV GIN_MODE=release \
	PORT=8084

EXPOSE 8084

# Run as non-root user for safety
RUN adduser -D -H appuser && chown -R appuser /app
USER appuser

ENTRYPOINT ["/app/notification-service"]
